<UserControl x:Class="MultiFuelMaster.Views.FuelTypesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <!-- Main Content: List View -->
        <Grid Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Add button -->
            <StackPanel Orientation="Horizontal" Margin="16,16,16,8">
                <TextBlock Text="Виды топлива" 
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                           VerticalAlignment="Center"/>
                <Button Content="Добавить топливо"
                        Command="{Binding AddNewCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="24,0,0,0"
                        Padding="16,8">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Добавить топливо" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </StackPanel>

            <!-- Data Grid -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding FuelTypes}"
                      SelectedItem="{Binding SelectedFuelType}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      Margin="16,8,16,16"
                      materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                      materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№" Binding="{Binding Number}" Width="50"/>
                    <DataGridTextColumn Header="Краткое название" Binding="{Binding ShortName}" Width="120"/>
                    <DataGridTextColumn Header="Полное название" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="Название на чеке" Binding="{Binding ReceiptName}" Width="150"/>
                    <DataGridTextColumn Header="Единица" Binding="{Binding Unit}" Width="80"/>
                    <DataGridTextColumn Header="Цвет" Binding="{Binding Color}" Width="80"/>
                    <DataGridTemplateColumn Header="Действия" Width="140">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Редактировать">
                                        <materialDesign:PackIcon Kind="Pencil" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                    </Button>
                                    <Button Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Удалить"
                                            Margin="4,0,0,0">
                                        <materialDesign:PackIcon Kind="Delete" Foreground="#F44336"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Edit Form -->
        <Grid Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" 
                       Text="{Binding IsAddingNew, Converter={StaticResource BoolToAddEditConverter}}"
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       Margin="16,16,16,8"/>

            <!-- Form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <materialDesign:Card Margin="16,8,16,16" Padding="24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Number -->
                        <TextBox Grid.Row="0" Grid.Column="0"
                                 Text="{Binding EditingFuelType.Number, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Номер (порядок)"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,16,16"/>

                        <!-- ShortName -->
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Text="{Binding EditingFuelType.ShortName, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Краткое название *"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,16"/>

                        <!-- FullName -->
                        <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                 Text="{Binding EditingFuelType.FullName, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Полное название *"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,16"/>

                        <!-- ReceiptName -->
                        <TextBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                 Text="{Binding EditingFuelType.ReceiptName, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Название на чеке"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,16"/>

                        <!-- Unit -->
                        <ComboBox Grid.Row="3" Grid.Column="0"
                                  Text="{Binding EditingFuelType.Unit, UpdateSourceTrigger=PropertyChanged}"
                                  IsEditable="True"
                                  materialDesign:HintAssist.Hint="Единица измерения"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  Margin="0,0,16,16">
                            <ComboBoxItem Content="литры"/>
                            <ComboBoxItem Content="кг"/>
                            <ComboBoxItem Content="м³"/>
                        </ComboBox>

                        <!-- Color -->
                        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical">
                            <TextBlock Text="Выбор цвета" Margin="0,0,0,8" FontWeight="Medium"/>
                            <Border BorderBrush="{DynamicResource MaterialDesignBody}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="8"
                                    Background="Transparent">
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Content="Зеленый" GroupName="FuelColor" 
                                                 IsChecked="{Binding EditingFuelType.Color, Converter={StaticResource ColorRadioConverter}, ConverterParameter=green}"
                                                 Margin="0,0,16,0"/>
                                    <RadioButton Content="Красный" GroupName="FuelColor"
                                                 IsChecked="{Binding EditingFuelType.Color, Converter={StaticResource ColorRadioConverter}, ConverterParameter=red}"
                                                 Margin="0,0,16,0"/>
                                    <RadioButton Content="Синий" GroupName="FuelColor"
                                                 IsChecked="{Binding EditingFuelType.Color, Converter={StaticResource ColorRadioConverter}, ConverterParameter=blue}"
                                                 Margin="0,0,16,0"/>
                                    <RadioButton Content="Желтый" GroupName="FuelColor"
                                                 IsChecked="{Binding EditingFuelType.Color, Converter={StaticResource ColorRadioConverter}, ConverterParameter=yellow}"
                                                 Margin="0,0,16,0"/>
                                    <RadioButton Content="Другой" GroupName="FuelColor"
                                                 IsChecked="{Binding EditingFuelType.Color, Converter={StaticResource ColorRadioConverter}, ConverterParameter=other}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Optional fields header -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="Дополнительные поля (необязательно)"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   Margin="0,16,0,8"/>

                        <!-- IkpuCode -->
                        <TextBox Grid.Row="5" Grid.Column="0"
                                 Text="{Binding EditingFuelType.IkpuCode, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Код ИКПУ"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,16,16"/>

                        <!-- PackageCode -->
                        <TextBox Grid.Row="5" Grid.Column="1"
                                 Text="{Binding EditingFuelType.PackageCode, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Код упаковки"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,16"/>

                        <!-- OriginCode -->
                        <TextBox Grid.Row="6" Grid.Column="0"
                                 Text="{Binding EditingFuelType.OriginCode, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Код страны происхождения"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,16,16"/>

                        <!-- ClientTin -->
                        <TextBox Grid.Row="6" Grid.Column="1"
                                 Text="{Binding EditingFuelType.ClientTin, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="ИНН клиента"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,16"/>

                        <!-- IsActive -->
                        <CheckBox Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                                  IsChecked="{Binding EditingFuelType.IsActive}"
                                  Content="Активный"
                                  Style="{StaticResource MaterialDesignCheckBox}"
                                  Margin="0,0,0,16"/>
                    </Grid>
                </materialDesign:Card>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="16,8,16,16">
                <Button Content="Отмена"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,16,0"
                        Padding="24,8"/>
                <Button Content="Сохранить"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Padding="24,8"/>
            </StackPanel>
        </Grid>

        <!-- Loading indicator -->
        <ProgressBar IsIndeterminate="True"
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                    VerticalAlignment="Top"/>
    </Grid>
</UserControl>
