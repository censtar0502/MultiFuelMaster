<UserControl x:Class="MultiFuelMaster.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:runtime="clr-namespace:MultiFuelMaster.Models.Runtime"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1100"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.Resources>
        <!-- Цвета статусов (для плиток постов) -->
        <SolidColorBrush x:Key="PostBrush_Offline" Color="#9E9E9E"/>
        <SolidColorBrush x:Key="PostBrush_NoResponse" Color="#FB8C00"/>
        <SolidColorBrush x:Key="PostBrush_Error" Color="#E53935"/>
        <SolidColorBrush x:Key="PostBrush_Ready" Color="#2E7D32"/>
        <SolidColorBrush x:Key="PostBrush_Fuelling" Color="#1E88E5"/>
        <SolidColorBrush x:Key="PostBrush_Paused" Color="#F9A825"/>
        <SolidColorBrush x:Key="PostBrush_Work" Color="#6D4C41"/>

        <Style x:Key="PostTileButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PostTileBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource PostBrush_Offline}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Соединение -->
                <DataTrigger Binding="{Binding Connection}" Value="{x:Static runtime:PostConnectionState.Offline}">
                    <Setter Property="BorderBrush" Value="{StaticResource PostBrush_Offline}"/>
                    <Setter Property="Opacity" Value="0.78"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Connection}" Value="{x:Static runtime:PostConnectionState.NoResponse}">
                    <Setter Property="BorderBrush" Value="{StaticResource PostBrush_NoResponse}"/>
                    <Setter Property="Opacity" Value="0.9"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Connection}" Value="{x:Static runtime:PostConnectionState.Error}">
                    <Setter Property="BorderBrush" Value="{StaticResource PostBrush_Error}"/>
                    <Setter Property="Opacity" Value="0.92"/>
                </DataTrigger>

                <!-- Операции (когда онлайн) -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Connection}" Value="{x:Static runtime:PostConnectionState.Online}"/>
                        <Condition Binding="{Binding Operation}" Value="{x:Static runtime:PostOperationState.Ready}"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="BorderBrush" Value="{StaticResource PostBrush_Ready}"/>
                </MultiDataTrigger>

                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Connection}" Value="{x:Static runtime:PostConnectionState.Online}"/>
                        <Condition Binding="{Binding Operation}" Value="{x:Static runtime:PostOperationState.Fuelling}"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="BorderBrush" Value="{StaticResource PostBrush_Fuelling}"/>
                </MultiDataTrigger>

                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Connection}" Value="{x:Static runtime:PostConnectionState.Online}"/>
                        <Condition Binding="{Binding Operation}" Value="{x:Static runtime:PostOperationState.Paused}"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="BorderBrush" Value="{StaticResource PostBrush_Paused}"/>
                </MultiDataTrigger>

                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Connection}" Value="{x:Static runtime:PostConnectionState.Online}"/>
                        <Condition Binding="{Binding Operation}" Value="{x:Static runtime:PostOperationState.Error}"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="BorderBrush" Value="{StaticResource PostBrush_Error}"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PostConnectionDotStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="9"/>
            <Setter Property="Height" Value="9"/>
            <Setter Property="Fill" Value="{StaticResource PostBrush_Offline}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Connection}" Value="{x:Static runtime:PostConnectionState.Online}">
                    <Setter Property="Fill" Value="{StaticResource PostBrush_Ready}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Connection}" Value="{x:Static runtime:PostConnectionState.NoResponse}">
                    <Setter Property="Fill" Value="{StaticResource PostBrush_NoResponse}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Connection}" Value="{x:Static runtime:PostConnectionState.Error}">
                    <Setter Property="Fill" Value="{StaticResource PostBrush_Error}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="0,0,0,12">
            <StackPanel DockPanel.Dock="Left">
                <TextBlock Text="Панель" Style="{StaticResource MaterialDesignHeadline4TextBlock}" />
                <TextBlock Text="Оперативная информация по постам, резервуарам и тревогам"
                           Opacity="0.72" Margin="0,4,0,0"/>
            </StackPanel>
        </DockPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.1*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Posts -->
            <materialDesign:Card Grid.Column="0" Padding="16" Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Margin="0,0,0,12">
                        <TextBlock Text="Посты 1–8" Style="{StaticResource MaterialDesignHeadline6TextBlock}" />
                        <TextBlock DockPanel.Dock="Right" Text="Нажмите на пост для деталей" Opacity="0.68" VerticalAlignment="Center"/>
                    </DockPanel>

                    <ItemsControl Grid.Row="1" ItemsSource="{Binding Posts}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="2" Columns="4"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type runtime:PostRuntimeState}">
                                <Button Command="{Binding DataContext.SelectPostCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}"
                                        Margin="6"
                                        Padding="0"
                                        Style="{StaticResource PostTileButtonStyle}">
                                    <Border Style="{StaticResource PostTileBorderStyle}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Header: Пост + связь -->
                                            <DockPanel Grid.Row="0">
                                                <TextBlock Text="{Binding DisplayName, Mode=OneWay}" FontWeight="SemiBold"/>
                                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Ellipse Style="{StaticResource PostConnectionDotStyle}" Margin="0,0,6,0"/>
                                                    <TextBlock Text="{Binding ConnectionTextRu}" Opacity="0.72" FontSize="12"/>
                                                </StackPanel>
                                            </DockPanel>

                                            <!-- Status -->
                                            <DockPanel Grid.Row="1" Margin="0,8,0,0">
                                                <Border CornerRadius="6" Padding="8,3" BorderThickness="1">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="BorderBrush" Value="{StaticResource PostBrush_Offline}"/>
                                                            <Setter Property="Background" Value="#0F000000"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Connection}" Value="{x:Static runtime:PostConnectionState.Offline}">
                                                                    <Setter Property="BorderBrush" Value="{StaticResource PostBrush_Offline}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Connection}" Value="{x:Static runtime:PostConnectionState.NoResponse}">
                                                                    <Setter Property="BorderBrush" Value="{StaticResource PostBrush_NoResponse}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Connection}" Value="{x:Static runtime:PostConnectionState.Error}">
                                                                    <Setter Property="BorderBrush" Value="{StaticResource PostBrush_Error}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Operation}" Value="{x:Static runtime:PostOperationState.Ready}">
                                                                    <Setter Property="BorderBrush" Value="{StaticResource PostBrush_Ready}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Operation}" Value="{x:Static runtime:PostOperationState.Fuelling}">
                                                                    <Setter Property="BorderBrush" Value="{StaticResource PostBrush_Fuelling}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Operation}" Value="{x:Static runtime:PostOperationState.Paused}">
                                                                    <Setter Property="BorderBrush" Value="{StaticResource PostBrush_Paused}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Operation}" Value="{x:Static runtime:PostOperationState.Error}">
                                                                    <Setter Property="BorderBrush" Value="{StaticResource PostBrush_Error}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding StatusTextRu}" FontSize="12" FontWeight="SemiBold"/>
                                                </Border>

                                                <TextBlock DockPanel.Dock="Right" Text="{Binding FuelName}" Opacity="0.78" VerticalAlignment="Center"/>
                                            </DockPanel>

                                            <!-- Цена -->
                                            <DockPanel Grid.Row="2" Margin="0,8,0,0">
                                                <TextBlock Text="Цена" Opacity="0.68" FontSize="12"/>
                                                <TextBlock DockPanel.Dock="Right" Text="{Binding Price, StringFormat={}{0:N0}}" FontWeight="SemiBold"/>
                                            </DockPanel>

                                            <!-- Объем / сумма -->
                                            <Grid Grid.Row="3" Margin="0,10,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="Объем" Opacity="0.68" FontSize="12"/>
                                                    <TextBlock Text="{Binding VolumeL, StringFormat={}{0:0.00} л}" FontWeight="SemiBold" FontSize="16"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="Сумма" Opacity="0.68" FontSize="12"/>
                                                    <TextBlock Text="{Binding Amount, StringFormat={}{0:N0}}" FontWeight="SemiBold" FontSize="16"/>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Задание -->
                                            <DockPanel Grid.Row="4" Margin="0,10,0,0">
                                                <TextBlock Text="Госномер" Opacity="0.68" FontSize="12"/>
                                                <TextBlock DockPanel.Dock="Right" Text="{Binding VehiclePlate}" Opacity="0.78" FontSize="12"/>
                                            </DockPanel>

                                            <TextBlock Grid.Row="5" Margin="0,8,0,0" Text="{Binding PresetTextRu}" Opacity="0.75" FontSize="12"/>

                                            <!-- Последнее обновление -->
                                            <TextBlock Grid.Row="6" Margin="0,10,0,0"
                                                       Text="{Binding LastUpdate, StringFormat={}{0:HH:mm:ss}}"
                                                       Opacity="0.55" HorizontalAlignment="Right" FontSize="12"/>
                                        </Grid>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </materialDesign:Card>

            <!-- Right column: details + tanks + alerts -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Selected Post -->
                <materialDesign:Card Grid.Row="0" Padding="16" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Выбранный пост" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Пост:" Opacity="0.7"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedPost.DisplayName, Mode=OneWay}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Статус:" Opacity="0.7"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedPost.StatusTextRu}"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Топливо:" Opacity="0.7"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedPost.FuelName}"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Объем / сумма:" Opacity="0.7"/>
                            <TextBlock Grid.Row="3" Grid.Column="1">
                                <Run Text="{Binding SelectedPost.VolumeL, StringFormat={}{0:0.00} л}"/>
                                <Run Text="  •  "/>
                                <Run Text="{Binding SelectedPost.Amount, StringFormat={}{0:N0}}"/>
                            </TextBlock>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Последнее:" Opacity="0.7"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedPost.LastUpdate, StringFormat={}{0:dd.MM.yyyy HH:mm:ss}}"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Tanks -->
                <materialDesign:Card Grid.Row="1" Padding="16" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Резервуары" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,12"/>
                        <ItemsControl ItemsSource="{Binding Tanks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type runtime:TankRuntimeState}">
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="90"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0">
                                            <Run Text="{Binding DisplayName, Mode=OneWay}"/>
                                            <Run Text=" — "/>
                                            <Run Text="{Binding FuelName}"/>
                                        </TextBlock>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding LevelText}" HorizontalAlignment="Right"/>

                                        <ProgressBar Grid.Row="1" Grid.ColumnSpan="2"
                                                     Height="10" Margin="0,6,0,0"
                                                     Value="{Binding LevelPercent}" Maximum="100"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Alerts -->
                <materialDesign:Card Grid.Row="2" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <DockPanel Grid.Row="0" Margin="0,0,0,12">
                            <TextBlock Text="События и тревоги" Style="{StaticResource MaterialDesignHeadline6TextBlock}" />
                            <Button DockPanel.Dock="Right"
                                    Command="{Binding ClearAlertsCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Padding="12,6"
                                    ToolTip="Очистить информационные сообщения">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Broom" Margin="0,0,6,0"/>
                                    <TextBlock Text="Очистить"/>
                                </StackPanel>
                            </Button>
                        </DockPanel>

                        <ListBox Grid.Row="1" ItemsSource="{Binding Alerts}">
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type runtime:AlertRuntimeItem}">
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <materialDesign:PackIcon Grid.Column="0" Margin="0,2,10,0" Kind="InformationOutline" Opacity="0.78">
                                            <materialDesign:PackIcon.Style>
                                                <Style TargetType="materialDesign:PackIcon">
                                                    <Setter Property="Kind" Value="InformationOutline"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Severity}" Value="{x:Static runtime:AlertSeverity.Warning}">
                                                            <Setter Property="Kind" Value="Alert"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Severity}" Value="{x:Static runtime:AlertSeverity.Critical}">
                                                            <Setter Property="Kind" Value="AlertOctagon"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </materialDesign:PackIcon.Style>
                                        </materialDesign:PackIcon>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock>
                                                <Run Text="{Binding Title}" FontWeight="SemiBold"/>
                                                <Run Text=" — "/>
                                                <Run Text="{Binding Message}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Time, StringFormat={}{0:dd.MM.yyyy HH:mm:ss}}" Opacity="0.55" FontSize="12"/>
                                        </StackPanel>

                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
