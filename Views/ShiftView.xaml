<UserControl x:Class="MultiFuelMaster.Views.ShiftView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="1000"
             Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Смена" Style="{StaticResource MaterialDesignHeadline4TextBlock}"/>
            <TextBlock Text="Открытие/закрытие смены, X/Z отчёты (UI-скелет)" Opacity="0.72" Margin="0,4,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: shift state -->
            <materialDesign:Card Grid.Column="0" Padding="16" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="Текущее состояние" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,12"/>

                    <DockPanel Margin="0,0,0,12">
                        <materialDesign:PackIcon Kind="AccountClock" Width="28" Height="28" Margin="0,0,12,0" Opacity="0.8"/>
                        <StackPanel>
                            <TextBlock Text="{Binding ShiftStatus}" FontSize="18" FontWeight="SemiBold"/>
                            <TextBlock Opacity="0.65" FontSize="12">
                                <Run Text="Открыта: "/>
                                <Run Text="{Binding OpenTime, StringFormat={}{0:dd.MM.yyyy HH:mm}}" />
                                <Run Text="   •   Закрыта: "/>
                                <Run Text="{Binding CloseTime, StringFormat={}{0:dd.MM.yyyy HH:mm}}" />
                            </TextBlock>
                        </StackPanel>
                    </DockPanel>

                    <Separator Margin="0,0,0,12"/>

                    <TextBlock Text="Оператор" Opacity="0.75" Margin="0,0,0,6"/>
                    <TextBox Text="{Binding OperatorLogin}" Height="34" />

                    <StackPanel Orientation="Horizontal" Margin="0,14,0,0">
                        <Button Content="Открыть смену"
                                Command="{Binding OpenShiftCommand}"
                                IsEnabled="{Binding CanOpen}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Padding="16,8"
                                Margin="0,0,10,0"/>
                        <Button Content="Закрыть смену"
                                Command="{Binding CloseShiftCommand}"
                                IsEnabled="{Binding CanClose}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Padding="16,8"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,14,0,0">
                        <Button Content="X-отчёт"
                                Command="{Binding PrintXReportCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Padding="16,8"
                                Margin="0,0,10,0"/>
                        <Button Content="Z-отчёт"
                                Command="{Binding PrintZReportCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Padding="16,8"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- Right: hints -->
            <materialDesign:Card Grid.Column="1" Padding="16">
                <StackPanel>
                    <TextBlock Text="Рекомендации интерфейса" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,12"/>

                    <TextBlock TextWrapping="Wrap" Opacity="0.8" Margin="0,0,0,10">
                        В будущем здесь будут: список кассиров, выбор кассы/смены, контроль лимитов, 
                        быстрые действия для оператора и журнал событий смены.
                    </TextBlock>

                    <TextBlock Text="Планируемые поля" FontWeight="SemiBold" Margin="0,0,0,6"/>
                    <TextBlock Text="• Кассир (ФИО/логин), касса, смена №" Opacity="0.78"/>
                    <TextBlock Text="• Денежный ящик: внесение/изъятие, инкассация" Opacity="0.78"/>
                    <TextBlock Text="• X/Z: предпросмотр + печать" Opacity="0.78"/>
                    <TextBlock Text="• Права доступа по ролям" Opacity="0.78"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
