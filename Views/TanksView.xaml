<UserControl x:Class="MultiFuelMaster.Views.TanksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:MultiFuelMaster.Converters"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.Resources>
        <converters:HexToColorBrushConverter x:Key="HexToColorBrushConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="16,16,16,8">
                <TextBlock Text="Ёмкости" Style="{StaticResource MaterialDesignHeadline5TextBlock}" VerticalAlignment="Center"/>
                <Button Content="Добавить ёмкость" Command="{Binding AddNewCommand}" Style="{StaticResource MaterialDesignRaisedButton}" Margin="24,0,0,0" Padding="16,8">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Добавить ёмкость" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </StackPanel>

            <materialDesign:Card Grid.Row="1" Margin="16,0,16,16" Padding="16">
                <StackPanel>
                    <TextBlock Text="Общие параметры" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding AllowBlockingDuringArrival}" Content="Разрешить блокировку емкости" Style="{StaticResource MaterialDesignCheckBox}" Margin="0,0,24,0"/>
                        <ComboBox ItemsSource="{Binding Source={x:Static converters:EnumHelper.CriticalLevelControls}}" SelectedItem="{Binding CriticalLevelControl}" materialDesign:HintAssist.Hint="Контроль остатков" Style="{StaticResource MaterialDesignOutlinedComboBox}" MinWidth="300"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <DataGrid Grid.Row="2" ItemsSource="{Binding Tanks}" SelectedItem="{Binding SelectedTank}" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" SelectionMode="Single" Margin="16,0,16,16" materialDesign:DataGridAssist.CellPadding="13 8 8 8" materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№" Binding="{Binding Number}" Width="60"/>
                    <DataGridTemplateColumn Header="Тип топлива" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="20" Height="20" CornerRadius="3" Background="{Binding FuelType.Color, Converter={StaticResource HexToColorBrushConverter}}" BorderBrush="{DynamicResource MaterialDesignBodyLight}" BorderThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding FuelType.ShortName}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Макс. объем" Binding="{Binding MaxVolume, StringFormat=F0}" Width="100"/>
                    <DataGridTextColumn Header="Мин. объем" Binding="{Binding MinVolume, StringFormat=F0}" Width="100"/>
                    <DataGridTextColumn Header="Крит. остаток" Binding="{Binding CriticalLevel, StringFormat=F0}" Width="100"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                    <DataGridTemplateColumn Header="Действия" Width="140">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" Style="{StaticResource MaterialDesignIconButton}" ToolTip="Редактировать">
                                        <materialDesign:PackIcon Kind="Pencil" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                    </Button>
                                    <Button Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" Style="{StaticResource MaterialDesignIconButton}" ToolTip="Удалить" Margin="4,0,0,0">
                                        <materialDesign:PackIcon Kind="Delete" Foreground="#F44336"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="{Binding IsAddingNew, Converter={StaticResource BoolToAddEditConverter}}" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Margin="16,16,16,8"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <materialDesign:Card Margin="16,8,16,16" Padding="24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBox Grid.Row="0" Grid.Column="0" Text="{Binding EditingTank.Number, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Номер емкости *" Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,16,16"/>

                        <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding AvailableFuelTypes}" SelectedValue="{Binding EditingTank.FuelTypeId}" SelectedValuePath="Id" materialDesign:HintAssist.Hint="Топливо *" Style="{StaticResource MaterialDesignOutlinedComboBox}" Margin="0,0,0,16">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="20" Height="20" CornerRadius="3" Background="{Binding Color, Converter={StaticResource HexToColorBrushConverter}}" BorderBrush="{DynamicResource MaterialDesignBodyLight}" BorderThickness="1" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding ShortName}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding EditingTank.MaxVolume, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Максимальный объем" Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,16,16"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding EditingTank.MinVolume, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Минимальный объем" Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,16"/>

                        <TextBox Grid.Row="2" Grid.Column="0" Text="{Binding EditingTank.CriticalLevel, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Критический остаток" Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,16,16"/>

                        <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding Source={x:Static converters:EnumHelper.CriticalLevelControls}}" SelectedItem="{Binding EditingTank.CriticalControl}" materialDesign:HintAssist.Hint="Реакция" Style="{StaticResource MaterialDesignOutlinedComboBox}" Margin="0,0,0,16"/>

                        <TextBox Grid.Row="3" Grid.Column="0" Text="{Binding EditingTank.CurrentLevel, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Текущий уровень" Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,16,16"/>

                        <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding Source={x:Static converters:EnumHelper.TankStatuses}}" SelectedItem="{Binding EditingTank.Status}" materialDesign:HintAssist.Hint="Статус" Style="{StaticResource MaterialDesignOutlinedComboBox}" Margin="0,0,0,16"/>

                        <CheckBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" IsChecked="{Binding EditingTank.IsBlockedDuringArrival}" Content="Заблокирована" Style="{StaticResource MaterialDesignCheckBox}" Margin="0,0,0,16"/>

                        <CheckBox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" IsChecked="{Binding EditingTank.IsActive}" Content="Активная" Style="{StaticResource MaterialDesignCheckBox}" Margin="0,0,0,16"/>
                    </Grid>
                </materialDesign:Card>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="16,8,16,16">
                <Button Content="Отмена" Command="{Binding CancelCommand}" Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,16,0" Padding="24,8"/>
                <Button Content="Сохранить" Command="{Binding SaveCommand}" Style="{StaticResource MaterialDesignRaisedButton}" Padding="24,8"/>
            </StackPanel>
        </Grid>

        <ProgressBar IsIndeterminate="True" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" VerticalAlignment="Top"/>
    </Grid>
</UserControl>