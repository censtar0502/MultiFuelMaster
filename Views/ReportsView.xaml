<UserControl x:Class="MultiFuelMaster.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Report Parameters -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,16">
            <StackPanel Margin="16">
                <TextBlock Text="Генерация отчета" 
                         Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                         Margin="0,0,0,16"/>
                
                <StackPanel Orientation="Horizontal">
                    <DatePicker SelectedDate="{Binding ReportStartDate}" 
                               materialDesign:HintAssist.Hint="Дата с"
                               Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                               Margin="0,0,16,0"/>
                    
                    <DatePicker SelectedDate="{Binding ReportEndDate}" 
                               materialDesign:HintAssist.Hint="Дата по"
                               Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                               Margin="0,0,16,0"/>
                    
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding GenerateReportCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileChart" Margin="0,0,8,0"/>
                            <TextBlock Text="Сгенерировать"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>
        
        <!-- Report Results -->
        <materialDesign:Card Grid.Row="1">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                         Text="Статистика" 
                         Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                         Margin="0,0,0,16"/>
                
                <UniformGrid Grid.Row="1" Rows="2" Columns="2">
                    <!-- Total Transactions -->
                    <materialDesign:Card Margin="0,0,8,8">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <materialDesign:PackIcon Grid.Row="0" 
                                                   Kind="History" 
                                                   Width="32" Height="32" 
                                                   HorizontalAlignment="Right"/>
                            <StackPanel Grid.Row="1">
                                <TextBlock Text="Всего транзакций" 
                                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                                         Opacity="0.68"/>
                                <TextBlock Text="{Binding Statistics.TotalTransactions}" 
                                         Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                         FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                    
                    <!-- Total Volume -->
                    <materialDesign:Card Margin="8,0,0,8">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <materialDesign:PackIcon Grid.Row="0" 
                                                   Kind="Water" 
                                                   Width="32" Height="32" 
                                                   HorizontalAlignment="Right"/>
                            <StackPanel Grid.Row="1">
                                <TextBlock Text="Общий объем, л" 
                                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                                         Opacity="0.68"/>
                                <TextBlock Text="{Binding Statistics.TotalVolume, StringFormat='{}{0:N2}'}" 
                                         Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                         FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                    
                    <!-- Total Revenue -->
                    <materialDesign:Card Margin="0,8,8,0">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <materialDesign:PackIcon Grid.Row="0" 
                                                   Kind="CurrencyRub" 
                                                   Width="32" Height="32" 
                                                   HorizontalAlignment="Right"/>
                            <StackPanel Grid.Row="1">
                                <TextBlock Text="Общая выручка, руб." 
                                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                                         Opacity="0.68"/>
                                <TextBlock Text="{Binding Statistics.TotalRevenue, StringFormat='{}{0:N2}'}" 
                                         Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                         FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                    
                    <!-- Average Transaction -->
                    <materialDesign:Card Margin="8,8,0,0">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <materialDesign:PackIcon Grid.Row="0" 
                                                   Kind="Calculator" 
                                                   Width="32" Height="32" 
                                                   HorizontalAlignment="Right"/>
                            <StackPanel Grid.Row="1">
                                <TextBlock Text="Средний чек, руб." 
                                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                                         Opacity="0.68"/>
                                <TextBlock Text="{Binding Statistics.AverageTransactionAmount, StringFormat='{}{0:N2}'}" 
                                         Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                         FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                </UniformGrid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>