<Window x:Class="MultiFuelMaster.Views.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройка системы"
        Height="600" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock Text="Добро пожаловать!" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Создайте учётную запись администратора" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,20" TextWrapping="Wrap"/>
            
            <Label Content="Ваше имя (необязательно)"/>
            <TextBox x:Name="FullNameTextBox" Height="30" Margin="0,0,0,10"/>
            
            <Label Content="Придумайте логин *"/>
            <TextBox x:Name="LoginTextBox" Height="30" Margin="0,0,0,10"/>
            
            <Label Content="Придумайте пароль *"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,10"/>
            
            <Label Content="Повторите пароль *"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="30" Margin="0,0,0,10"/>
            
            <TextBlock Text="Минимальная длина логина: 3 символа" Margin="0,0,0,5" Foreground="Gray"/>
            <TextBlock Text="Минимальная длина пароля: 4 символа" Margin="0,0,0,15" Foreground="Gray"/>
            
            <TextBlock x:Name="ErrorText" Foreground="Red" Margin="0,0,0,10" TextWrapping="Wrap" Visibility="Collapsed"/>
            <TextBlock x:Name="SuccessText" Foreground="Green" Margin="0,0,0,10" TextWrapping="Wrap" Visibility="Collapsed"/>
            
            <Button x:Name="CreateButton" Content="Создать администратора" Click="CreateButton_Click" 
                    Height="40" FontSize="14" Background="Purple" Foreground="White" Margin="0,10,0,0"/>
            
            <ProgressBar x:Name="LoadingBar" IsIndeterminate="True" Visibility="Collapsed" Height="20" Margin="0,15,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Window>
