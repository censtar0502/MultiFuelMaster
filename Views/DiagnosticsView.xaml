<UserControl x:Class="MultiFuelMaster.Views.DiagnosticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:runtime="clr-namespace:MultiFuelMaster.Models.Runtime"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="1100"
             Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Диагностика" Style="{StaticResource MaterialDesignHeadline4TextBlock}"/>
            <TextBlock Text="Состояние связи постов и журнал событий (UI-скелет)" Opacity="0.72" Margin="0,4,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="340"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Posts list -->
            <materialDesign:Card Grid.Column="0" Padding="12" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="Посты" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,12"/>

                    <ListBox ItemsSource="{Binding Posts}" SelectedItem="{Binding SelectedPost}">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type runtime:PostRuntimeState}">
                                <Grid Margin="0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <materialDesign:PackIcon Grid.Column="0" Kind="LanConnect" Margin="0,0,10,0" Opacity="0.78">
                                        <materialDesign:PackIcon.Style>
                                            <Style TargetType="materialDesign:PackIcon">
                                                <Setter Property="Kind" Value="LanConnect"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Connection}" Value="{x:Static runtime:PostConnectionState.Offline}">
                                                        <Setter Property="Kind" Value="LanDisconnect"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Connection}" Value="{x:Static runtime:PostConnectionState.Error}">
                                                        <Setter Property="Kind" Value="LanPending"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </materialDesign:PackIcon.Style>
                                    </materialDesign:PackIcon>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding StatusTextRu}" Opacity="0.7" FontSize="12"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" Text="{Binding LastUpdate, StringFormat={}{0:HH:mm:ss}}" Opacity="0.55" VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </materialDesign:Card>

            <!-- Details -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <materialDesign:Card Grid.Row="0" Padding="16" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Детали" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,12"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Пост:" Opacity="0.7"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedPost.DisplayName}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Связь:" Opacity="0.7"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedPost.Connection}"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Состояние:" Opacity="0.7"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedPost.StatusTextRu}"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Последнее сообщение:" Opacity="0.7"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedPost.LastUpdate, StringFormat={}{0:dd.MM.yyyy HH:mm:ss}}"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Grid.Row="1" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Журнал событий" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,12"/>
                        <ListBox ItemsSource="{Binding Alerts}">
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type runtime:AlertRuntimeItem}">
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock>
                                            <Run Text="{Binding Time, StringFormat={}{0:HH:mm:ss}}"/>
                                            <Run Text="  "/>
                                            <Run Text="{Binding Title}" FontWeight="SemiBold"/>
                                            <Run Text=" — "/>
                                            <Run Text="{Binding Message}"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Severity}" Opacity="0.55" FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
