<Window x:Class="MultiFuelMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiFuelMaster"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="760" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="34"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryHueMidBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                    <TextBlock Text="MultiFuelMaster" Foreground="White" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="Панель"
                            Command="{Binding NavigateToPanelCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White" Margin="8,0"/>
                    <Button Content="Транзакции"
                            Command="{Binding NavigateToTransactionsCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White" Margin="8,0"/>
                    <Button Content="Смена"
                            Command="{Binding NavigateToShiftCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White" Margin="8,0"/>
                    <Button Content="Отчёты"
                            Command="{Binding NavigateToReportsCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White" Margin="8,0"/>
                    <Button Content="Диагностика"
                            Command="{Binding NavigateToDiagnosticsCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White" Margin="8,0"/>
                    <Button Content="Сервис"
                            Command="{Binding NavigateToServiceCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White" Margin="8,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                    <Button Content="Выход"
                            Command="{Binding ExitCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Foreground="White"
                            BorderBrush="White"
                            Margin="8,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left sidebar (config) -->
            <Border Grid.Column="0" Background="{DynamicResource MaterialDesignCardBackground}" Padding="14"
                    Visibility="{Binding IsAdminMenuVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="Конфигурация" FontSize="16" FontWeight="Bold" Margin="0,0,0,14"/>

                    <Button Content="Параметры АЗС"
                            Command="{Binding NavigateToStationSettingsCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Left"
                            Padding="10,8"
                            Margin="0,0,0,6"/>

                    <Button Content="Пользователи и роли"
                            Command="{Binding NavigateToUsersCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Left"
                            Padding="10,8"
                            Margin="0,0,0,6"/>

                    <Button Content="Топливо"
                            Command="{Binding NavigateToFuelTypesCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Left"
                            Padding="10,8"
                            Margin="0,0,0,6"/>

                    <Button Content="Резервуары"
                            Command="{Binding NavigateToTanksCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Left"
                            Padding="10,8"
                            Margin="0,0,0,6"/>

                    <Separator Margin="0,8,0,10"/>

                    <Button Content="Посты и связь"
                            Command="{Binding NavigateToPostsAndConnectionCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Left"
                            Padding="10,8"
                            Margin="0,0,0,6"/>

                    <Button Content="Каналы и пистолеты"
                            Command="{Binding NavigateToChannelsCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Left"
                            Padding="10,8"
                            Margin="0,0,0,6"/>

                    <Button Content="Параметры продаж"
                            Command="{Binding NavigateToSalesParametersCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Left"
                            Padding="10,8"
                            Margin="0,0,0,6"/>

                    <Separator Margin="0,8,0,10"/>

                    <Button Content="Система"
                            Command="{Binding NavigateToSystemCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Left"
                            Padding="10,8"
                            Margin="0,0,0,6"/>
                </StackPanel>
            </Border>

            <!-- Content area -->
            <ContentControl Grid.Column="1" Content="{Binding CurrentView}" />
        </Grid>

        <!-- Status bar -->
        <Border Grid.Row="2" Background="{DynamicResource MaterialDesignCardBackground}">
            <Grid Margin="14,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusShift}" VerticalAlignment="Center" Opacity="0.85"/>
                <TextBlock Grid.Column="1" Text="   |   " VerticalAlignment="Center" Opacity="0.45"/>
                <TextBlock Grid.Column="2" Text="{Binding StatusPosts}" VerticalAlignment="Center" Opacity="0.85"/>
                <TextBlock Grid.Column="3" Text="{Binding StatusAlerts}" VerticalAlignment="Center" Opacity="0.85" Margin="16,0,0,0"/>
                <TextBlock Grid.Column="4" Text="{Binding CurrentUserLogin, StringFormat=Пользователь: {0}}" VerticalAlignment="Center" Opacity="0.65"/>
            </Grid>
        </Border>
    </Grid>
</Window>
