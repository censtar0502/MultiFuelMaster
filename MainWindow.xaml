<Window x:Class="MultiFuelMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MultiFuelMaster"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
    
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Top Navigation Bar -->
        <materialDesign:ColorZone Grid.Row="0" Grid.ColumnSpan="2" 
                                  Mode="PrimaryMid" 
                                  Padding="16"
                                  materialDesign:ElevationAssist.Elevation="Dp4">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="GasStation" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,10,0"
                                           Width="24" Height="24"/>
                    <TextBlock Text="MultiFuelMaster" 
                             Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                             VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <!-- User Display -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <materialDesign:PackIcon Kind="Account" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding CurrentUserLogin}" 
                                 VerticalAlignment="Center"
                                 FontWeight="Medium"/>
                    </StackPanel>
                    
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding NavigateToEmptyDashboardCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ViewDashboard" Margin="0,0,5,0"/>
                            <TextBlock Text="Панель"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding NavigateToStationsCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="MapMarker" Margin="0,0,5,0"/>
                            <TextBlock Text="Станции"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding NavigateToTransactionsCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="History" Margin="0,0,5,0"/>
                            <TextBlock Text="Транзакции"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding NavigateToReportsCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileChart" Margin="0,0,5,0"/>
                            <TextBlock Text="Отчеты"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding NavigateToSettingsCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Cog" Margin="0,0,5,0"/>
                            <TextBlock Text="Настройки"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>
        
        <!-- Left Sidebar Menu -->
        <Border Grid.Row="1" Grid.Column="0" 
                Background="#F5F5F5" 
                Width="250"
                Visibility="{Binding IsAdminMenuVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,10">
                    <TextBlock Text="Параметры системы" 
                              FontWeight="Bold" 
                              Margin="15,10,15,15"
                              FontSize="14"
                              Foreground="#673AB7"/>
                    
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Left"
                            Command="{Binding NavigateToStationSettingsCommand}"
                            Padding="15,12" Height="42">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="GasStation" Margin="0,0,10,0"/>
                            <TextBlock Text="Параметры АЗС"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Left"
                            Padding="15,12" Height="42">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountMultiple" Margin="0,0,10,0"/>
                            <TextBlock Text="Пользователи"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Left"
                            Command="{Binding NavigateToFuelTypesCommand}"
                            Padding="15,12" Height="42">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Fuel" Margin="0,0,10,0"/>
                            <TextBlock Text="Виды топлива"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Left"
                            Command="{Binding NavigateToTanksCommand}"
                            Padding="15,12" Height="42">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Water" Margin="0,0,10,0"/>
                            <TextBlock Text="Ёмкости"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Left"
                            Padding="15,12" Height="42">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Pipe" Margin="0,0,10,0"/>
                            <TextBlock Text="Каналы ТРК"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Left"
                            Padding="15,12" Height="42">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Counter" Margin="0,0,10,0"/>
                            <TextBlock Text="Посты"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Left"
                            Padding="15,12" Height="42">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Cash" Margin="0,0,10,0"/>
                            <TextBlock Text="Параметры продаж"/>
                        </StackPanel>
                    </Button>
                    
                    <Separator Margin="15,10"/>
                    
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Left"
                            Command="{Binding ExitCommand}"
                            Padding="15,12" Height="42">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ExitToApp" Margin="0,0,10,0" Foreground="#F44336"/>
                            <TextBlock Text="Выход" Foreground="#F44336"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Main Content Area -->
        <ContentControl Grid.Row="1" Grid.Column="1" 
                        Content="{Binding CurrentView}" 
                        Margin="16"/>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Grid.ColumnSpan="2">
            <StatusBarItem>
                <TextBlock Text="MultiFuelMaster v1.0 | Состояние: Подключено"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
