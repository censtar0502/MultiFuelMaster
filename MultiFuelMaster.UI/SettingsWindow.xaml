<Window x:Class="MultiFuelMaster.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки поста"
        Height="460" Width="480"
        WindowStartupLocation="CenterOwner"
        Background="#0A0E1A"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Window.Resources>
        <SolidColorBrush x:Key="BgPanelBrush"       Color="#111827"/>
        <SolidColorBrush x:Key="BgCardBrush"         Color="#1A2235"/>
        <SolidColorBrush x:Key="TextPrimaryBrush"    Color="#E8EAF6"/>
        <SolidColorBrush x:Key="TextSecondaryBrush"  Color="#90A4AE"/>
        <SolidColorBrush x:Key="BorderBrush"         Color="#263045"/>
        <SolidColorBrush x:Key="GreenBrush"          Color="#00E676"/>

        <Style x:Key="DarkComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#1A2235"/>
            <Setter Property="Foreground" Value="#E8EAF6"/>
            <Setter Property="Padding"    Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2D3E5C"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1A3D2B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background"         Value="#1A2235"/>
            <Setter Property="Foreground"         Value="#E8EAF6"/>
            <Setter Property="BorderBrush"        Value="#263045"/>
            <Setter Property="BorderThickness"    Value="1"/>
            <Setter Property="Padding"            Value="10,8"/>
            <Setter Property="FontSize"           Value="14"/>
            <Setter Property="FontFamily"         Value="Consolas"/>
            <Setter Property="ItemContainerStyle" Value="{StaticResource DarkComboBoxItem}"/>
        </Style>

        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background"   Value="#1A2235"/>
            <Setter Property="Foreground"   Value="#E8EAF6"/>
            <Setter Property="BorderBrush"  Value="#263045"/>
            <Setter Property="FontSize"     Value="14"/>
            <Setter Property="FontFamily"   Value="Consolas"/>
            <Setter Property="Padding"      Value="10,8"/>
            <Setter Property="CaretBrush"   Value="#E8EAF6"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0" x:Name="TitleText"
                       Text="Настройки Поста №1"
                       FontSize="20" FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       Margin="0,0,0,16"/>

            <!-- COM порт -->
            <Border Grid.Row="1"
                    Background="{StaticResource BgPanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1" CornerRadius="10"
                    Padding="16" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="COM ПОРТ" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <ComboBox x:Name="ComPortCombo"
                              Style="{StaticResource DarkComboBox}"
                              SelectionChanged="ComPortCombo_SelectionChanged"/>
                </StackPanel>
            </Border>

            <!-- Цена за литр -->
            <Border Grid.Row="2"
                    Background="{StaticResource BgPanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1" CornerRadius="10"
                    Padding="16" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="ЦЕНА ЗА ЛИТР (сум)" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <TextBox x:Name="PriceInput"
                             Style="{StaticResource DarkTextBox}"
                             FontSize="18" FontWeight="Bold"
                             PreviewTextInput="PriceInput_PreviewTextInput"
                             TextChanged="PriceInput_TextChanged"/>
                </StackPanel>
            </Border>

            <!-- Тип топлива -->
            <Border Grid.Row="3"
                    Background="{StaticResource BgPanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1" CornerRadius="10"
                    Padding="16" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="ТИП ТОПЛИВА" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <ComboBox x:Name="FuelTypeCombo"
                              Style="{StaticResource DarkComboBox}"
                              SelectionChanged="FuelTypeCombo_SelectionChanged">
                        <ComboBoxItem Content="АИ-80"  Tag="АИ-80"/>
                        <ComboBoxItem Content="АИ-92"  Tag="АИ-92"/>
                        <ComboBoxItem Content="АИ-95"  Tag="АИ-95" IsSelected="True"/>
                        <ComboBoxItem Content="АИ-98"  Tag="АИ-98"/>
                        <ComboBoxItem Content="ДТ"     Tag="ДТ"/>
                        <ComboBoxItem Content="ДТ+"    Tag="ДТ+"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Кнопки -->
            <StackPanel Grid.Row="4" Orientation="Horizontal"
                        HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="ОТМЕНА" Click="BtnCancel_Click"
                        Background="#3D1A1A" Foreground="#FF5252"
                        FontWeight="Bold" FontSize="12"
                        Padding="24,12" Margin="0,0,16,0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="СОХРАНИТЬ" Click="BtnSave_Click"
                        Background="#1A3D2B" Foreground="{StaticResource GreenBrush}"
                        FontWeight="Bold" FontSize="12"
                        Padding="24,12" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
