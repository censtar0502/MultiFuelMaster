<Window x:Class="MultiFuelMaster.UI.GlobalSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки MultiFuelMaster"
        Width="360" Height="240"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#080C16"
        WindowStyle="None">

    <Window.Resources>
        <SolidColorBrush x:Key="BgPanel"       Color="#0D1117"/>
        <SolidColorBrush x:Key="BgCard"        Color="#1A2235"/>
        <SolidColorBrush x:Key="Green"         Color="#00E676"/>
        <SolidColorBrush x:Key="Amber"         Color="#FFC107"/>
        <SolidColorBrush x:Key="TextPrimary"   Color="#E8EAF6"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#90A4AE"/>
        <SolidColorBrush x:Key="TextDim"       Color="#546E7A"/>
        <SolidColorBrush x:Key="Border"        Color="#1E2840"/>
    </Window.Resources>

    <Border BorderBrush="{StaticResource Border}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="38"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" Background="{StaticResource BgPanel}"
                    BorderBrush="{StaticResource Border}" BorderThickness="0,0,0,1"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid Margin="12,0">
                    <TextBlock x:Name="TitleText" Text="Настройки"
                               FontSize="12" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimary}"
                               VerticalAlignment="Center"/>
                    <Button Content="✕" Click="BtnCancel_Click"
                            HorizontalAlignment="Right"
                            Width="32" Height="32"
                            Background="Transparent" Foreground="{StaticResource TextSecondary}"
                            FontSize="12" BorderThickness="0" Cursor="Hand"/>
                </Grid>
            </Border>

            <!-- Содержимое -->
            <StackPanel Grid.Row="1" Margin="16,16,16,8">

                <!-- Количество постов -->
                <TextBlock Text="КОЛИЧЕСТВО ПОСТОВ" FontSize="9" FontWeight="Bold"
                           Foreground="{StaticResource TextDim}" Margin="0,0,0,6"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="{StaticResource BgCard}"
                            BorderBrush="{StaticResource Border}" BorderThickness="1"
                            CornerRadius="6" Padding="10,6" Margin="0,0,8,0">
                        <TextBlock x:Name="PanelCountDisplay" Text="3"
                                   FontSize="24" FontWeight="Bold" FontFamily="Consolas"
                                   Foreground="{StaticResource Green}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <Button Content="▲" Click="BtnIncrease_Click"
                                Width="36" Height="30" Margin="0,0,0,4"
                                Background="{StaticResource BgCard}"
                                Foreground="{StaticResource Green}"
                                FontSize="14" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
                        <Button Content="▼" Click="BtnDecrease_Click"
                                Width="36" Height="30"
                                Background="{StaticResource BgCard}"
                                Foreground="{StaticResource Amber}"
                                FontSize="14" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="От 1 до 20 постов. Применяется при следующем запуске."
                           FontSize="9" Foreground="{StaticResource TextDim}"
                           Margin="0,8,0,0" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Кнопки -->
            <Grid Grid.Row="2" Margin="16,0,16,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Сохранить" Click="BtnSave_Click"
                        Height="32" Background="#1A3D2B" Foreground="{StaticResource Green}"
                        FontWeight="Bold" FontSize="11" BorderThickness="0" Cursor="Hand"/>

                <Button Grid.Column="2" Content="Отмена" Click="BtnCancel_Click"
                        Height="32" Background="{StaticResource BgCard}"
                        Foreground="{StaticResource TextSecondary}"
                        FontSize="11" BorderThickness="0" Cursor="Hand"/>
            </Grid>
        </Grid>
    </Border>
</Window>
