<Window x:Class="MultiFuelMaster.UI.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="О программе MultiFuelMaster"
        Height="560" Width="420"
        WindowStartupLocation="CenterOwner"
        Background="#0A0E1A"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Window.Resources>
        <SolidColorBrush x:Key="BgPanelBrush"      Color="#111827"/>
        <SolidColorBrush x:Key="BgCardBrush"        Color="#1A2235"/>
        <SolidColorBrush x:Key="TextPrimaryBrush"   Color="#E8EAF6"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#90A4AE"/>
        <SolidColorBrush x:Key="TextDimBrush"       Color="#546E7A"/>
        <SolidColorBrush x:Key="BorderBrush"        Color="#263045"/>
        <SolidColorBrush x:Key="GreenBrush"         Color="#00E676"/>
        <SolidColorBrush x:Key="BlueBrush"          Color="#42A5F5"/>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Название -->
        <Border Grid.Row="0" Background="{StaticResource BgPanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" CornerRadius="12"
                Padding="20" Margin="0,0,0,12">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="MultiFuelMaster" FontSize="18" FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                <TextBlock x:Name="VersionText" Text="Версия 1.0.0"
                           FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,4,0,0"/>
                <TextBlock Text="MDI управление ТРК GasKit"
                           FontSize="11" Foreground="{StaticResource TextDimBrush}"
                           HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Автор -->
        <Border Grid.Row="1" Background="{StaticResource BgPanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" CornerRadius="12"
                Padding="16" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="АВТОР" FontSize="11" FontWeight="Bold"
                           Foreground="{StaticResource TextDimBrush}" Margin="0,0,0,8"/>
                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Автор:" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                    <TextBlock Grid.Column="1" Text="Azerhud"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontSize="13" FontWeight="SemiBold"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Email:" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                    <TextBlock Grid.Column="1" Text="azerhud@gmail.com"
                               Foreground="{StaticResource BlueBrush}"
                               FontSize="13" TextDecorations="Underline" Cursor="Hand"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Разработка -->
        <Border Grid.Row="2" Background="{StaticResource BgCardBrush}"
                BorderBrush="{StaticResource BlueBrush}"
                BorderThickness="1" CornerRadius="12"
                Padding="16" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="РАЗРАБОТКА" FontSize="11" FontWeight="Bold"
                           Foreground="{StaticResource BlueBrush}" Margin="0,0,0,8"/>
                <TextBlock Text="Программа написана Искусственным Интеллектом Claude при содействии автора."
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontSize="12" TextWrapping="Wrap" LineHeight="18"/>
            </StackPanel>
        </Border>

        <!-- Дата сборки -->
        <Border Grid.Row="3" Background="{StaticResource BgPanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" CornerRadius="12"
                Padding="16" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Дата сборки:" Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="13" VerticalAlignment="Center"/>
                <TextBlock x:Name="BuildDateText" Grid.Column="1" Text=""
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontSize="13" FontWeight="SemiBold"/>
            </Grid>
        </Border>

        <!-- Отказ от ответственности -->
        <Border Grid.Row="4" Background="{StaticResource BgCardBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" CornerRadius="10" Padding="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock
                    Text="ПРОГРАММНОЕ ОБЕСПЕЧЕНИЕ ПРЕДОСТАВЛЯЕТСЯ «КАК ЕСТЬ», БЕЗ КАКИХ-ЛИБО ГАРАНТИЙ. АВТОР НЕ НЕСЁТ ОТВЕТСТВЕННОСТИ ЗА ЛЮБЫЕ УБЫТКИ, ВОЗНИКШИЕ В РЕЗУЛЬТАТЕ ИСПОЛЬЗОВАНИЯ ИЛИ НЕВОЗМОЖНОСТИ ИСПОЛЬЗОВАНИЯ ДАННОГО ПРОГРАММНОГО ОБЕСПЕЧЕНИЯ."
                    Foreground="{StaticResource TextDimBrush}"
                    FontSize="10" TextWrapping="Wrap" LineHeight="16"/>
            </ScrollViewer>
        </Border>

        <!-- Кнопка ОК -->
        <Button Grid.Row="5" Content="ОК" Click="BtnOk_Click"
                Background="#1A3D2B" Foreground="{StaticResource GreenBrush}"
                FontWeight="Bold" FontSize="14"
                Padding="48,12" Margin="0,12,0,0"
                HorizontalAlignment="Center" Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
