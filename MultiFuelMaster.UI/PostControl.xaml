<UserControl x:Class="MultiFuelMaster.UI.PostControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="380" MinWidth="340">

    <UserControl.Resources>
        <SolidColorBrush x:Key="BgPrimaryBrush"   Color="#0A0E1A"/>
        <SolidColorBrush x:Key="BgPanelBrush"     Color="#111827"/>
        <SolidColorBrush x:Key="BgCardBrush"      Color="#1A2235"/>
        <SolidColorBrush x:Key="GreenBrush"       Color="#00E676"/>
        <SolidColorBrush x:Key="AmberBrush"       Color="#FFC107"/>
        <SolidColorBrush x:Key="RedBrush"         Color="#FF5252"/>
        <SolidColorBrush x:Key="BlueBrush"        Color="#42A5F5"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#E8EAF6"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#90A4AE"/>
        <SolidColorBrush x:Key="TextDimBrush"     Color="#546E7A"/>
        <SolidColorBrush x:Key="BorderBrush"      Color="#263045"/>

        <Style x:Key="InfoCardBorder" TargetType="Border">
            <Setter Property="Background"        Value="{StaticResource BgCardBrush}"/>
            <Setter Property="BorderBrush"       Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness"   Value="1"/>
            <Setter Property="CornerRadius"      Value="8"/>
            <Setter Property="Padding"           Value="10"/>
        </Style>
    </UserControl.Resources>

    <Border Background="{StaticResource BgPrimaryBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1" CornerRadius="12" Margin="4">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="12">

                <!-- ====== ЗАГОЛОВОК ПОСТА ====== -->
                <Border Background="{StaticResource BgPanelBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1" CornerRadius="10"
                        Padding="12,8" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Номер поста -->
                        <Border Grid.Column="0" Width="34" Height="34"
                                CornerRadius="8" Margin="0,0,10,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#00E676" Offset="0"/>
                                    <GradientStop Color="#42A5F5" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock x:Name="PostNumberText" Text="1"
                                       FontSize="16" FontWeight="ExtraBold"
                                       Foreground="#0A0E1A"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontFamily="Consolas"/>
                        </Border>

                        <!-- Подпись -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="PostTitleText" Text="Пост №1"
                                       FontSize="14" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock x:Name="SubtitleText" Text="АИ-95 — не подключено"
                                       FontSize="10"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>

                        <!-- Статус -->
                        <Border x:Name="StatusBorder" Grid.Column="2"
                                CornerRadius="10" Padding="8,4"
                                Background="#3A1A1A" BorderBrush="#5A2D2D"
                                BorderThickness="1" MinWidth="90">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Ellipse x:Name="StatusDot" Width="6" Height="6"
                                         Fill="{StaticResource RedBrush}" Margin="0,0,6,0"/>
                                <TextBlock x:Name="StatusText" Text="Нет связи"
                                           FontSize="10" FontWeight="Bold"
                                           Foreground="{StaticResource RedBrush}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- ====== ПОДКЛЮЧЕНИЕ ====== -->
                <Border Background="{StaticResource BgPanelBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1" CornerRadius="10"
                        Padding="10,8" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="COM:"
                                   FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <Border Grid.Column="1" Background="{StaticResource BgCardBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1" CornerRadius="5"
                                Padding="6,4" VerticalAlignment="Center" Margin="0,0,6,0">
                            <TextBlock x:Name="ComPortInput" Text="COM3"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="12" FontFamily="Consolas"/>
                        </Border>
                        <Button x:Name="BtnConnect" Grid.Column="2" Content="Подключить"
                                Click="BtnConnect_Click" Height="26" Padding="8,0"
                                Background="#1A3D2B" Foreground="{StaticResource GreenBrush}"
                                FontWeight="Bold" FontSize="11" Margin="0,0,6,0"/>
                        <Button x:Name="BtnSettings" Grid.Column="3" Content="⚙"
                                Click="BtnSettings_Click" Height="26" Width="26"
                                Background="#2A3D1A" Foreground="{StaticResource AmberBrush}"
                                FontWeight="Bold" FontSize="13" ToolTip="Настройки поста"/>
                    </Grid>
                </Border>

                <!-- ====== ГЛАВНЫЙ ДИСПЛЕЙ ====== -->
                <Border Background="{StaticResource BgPanelBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1" CornerRadius="10"
                        Padding="16,12" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="ЛИТРОВ" FontSize="9" FontWeight="Bold"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock x:Name="LitersDisplay" Text="0.00"
                                       FontSize="36" FontWeight="Bold"
                                       Foreground="{StaticResource GreenBrush}"
                                       HorizontalAlignment="Center" FontFamily="Consolas"/>
                            <TextBlock Text="л" FontSize="11"
                                       Foreground="{StaticResource TextDimBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <Rectangle Grid.Column="1" Width="1" Height="60"
                                   Fill="{StaticResource BorderBrush}" Margin="12,0"/>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="К ОПЛАТЕ" FontSize="9" FontWeight="Bold"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock x:Name="CostDisplay" Text="0"
                                       FontSize="36" FontWeight="Bold"
                                       Foreground="{StaticResource AmberBrush}"
                                       HorizontalAlignment="Center" FontFamily="Consolas"/>
                            <TextBlock Text="сум" FontSize="11"
                                       Foreground="{StaticResource TextDimBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- ====== ИНФОРМАЦИОННЫЕ КАРТОЧКИ ====== -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="6"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="6"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Топливо -->
                    <Border Grid.Column="0" Style="{StaticResource InfoCardBorder}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ТОПЛИВО" FontSize="8" FontWeight="Bold"
                                       Foreground="{StaticResource TextDimBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="FuelTypeDisplay" Text="АИ-95"
                                       FontSize="14" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center" Margin="0,3,0,0"
                                       FontFamily="Consolas"/>
                        </StackPanel>
                    </Border>

                    <!-- Цена -->
                    <Border Grid.Column="2" Style="{StaticResource InfoCardBorder}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ЦЕНА/Л" FontSize="8" FontWeight="Bold"
                                       Foreground="{StaticResource TextDimBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="PriceDisplay" Text="2233"
                                       FontSize="14" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center" Margin="0,3,0,0"
                                       FontFamily="Consolas"/>
                        </StackPanel>
                    </Border>

                    <!-- TOT -->
                    <Border Grid.Column="4" Style="{StaticResource InfoCardBorder}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="TOT (л)" FontSize="8" FontWeight="Bold"
                                       Foreground="{StaticResource TextDimBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TotDisplay" Text="—"
                                       FontSize="14" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center" Margin="0,3,0,0"
                                       FontFamily="Consolas"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- ====== ПОЛЯ ВВОДА ====== -->
                <Border Background="{StaticResource BgPanelBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1" CornerRadius="10"
                        Padding="10,8" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="ЛИТРЫ" FontSize="8" FontWeight="Bold"
                                       Foreground="{StaticResource TextDimBrush}" Margin="0,0,0,4"/>
                            <TextBox x:Name="PresetLitersInput"
                                     Background="{StaticResource BgCardBrush}"
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     BorderBrush="{StaticResource BorderBrush}"
                                     FontSize="14" FontWeight="Bold" FontFamily="Consolas" Padding="8"
                                     PreviewTextInput="NumericInput_PreviewTextInput"
                                     TextChanged="PresetLiters_TextChanged"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="СУММА (СУМ)" FontSize="8" FontWeight="Bold"
                                       Foreground="{StaticResource TextDimBrush}" Margin="0,0,0,4"/>
                            <TextBox x:Name="PresetCostInput"
                                     Background="{StaticResource BgCardBrush}"
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     BorderBrush="{StaticResource BorderBrush}"
                                     FontSize="14" FontWeight="Bold" FontFamily="Consolas" Padding="8"
                                     PreviewTextInput="NumericInput_PreviewTextInput"
                                     TextChanged="PresetCost_TextChanged"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- ====== КНОПКИ СТАРТ/СТОП ====== -->
                <Grid Margin="0,0,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="6"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="BtnStart" Grid.Column="0" Height="48"
                            Click="BtnStart_Click" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="btnBorder" CornerRadius="8"
                                        Background="#1A3D2B" BorderBrush="#2D6B45"
                                        BorderThickness="2" Padding="6">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="▶" FontSize="14" HorizontalAlignment="Center" Foreground="#00E676"/>
                                        <TextBlock Text="СТАРТ" FontSize="10" FontWeight="ExtraBold"
                                                   HorizontalAlignment="Center" Foreground="#00E676"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="btnBorder" Property="Background" Value="#2A5D3B"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="btnBorder" Property="Opacity" Value="0.3"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="BtnStop" Grid.Column="2" Height="48"
                            Click="BtnStop_Click" IsEnabled="False" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="btnBorder" CornerRadius="8"
                                        Background="#3D1A1A" BorderBrush="#6B2D2D"
                                        BorderThickness="2" Padding="6">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="■" FontSize="14" HorizontalAlignment="Center" Foreground="#FF5252"/>
                                        <TextBlock Text="СТОП" FontSize="10" FontWeight="ExtraBold"
                                                   HorizontalAlignment="Center" Foreground="#FF5252"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="btnBorder" Property="Background" Value="#5D2A2A"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="btnBorder" Property="Opacity" Value="0.3"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
