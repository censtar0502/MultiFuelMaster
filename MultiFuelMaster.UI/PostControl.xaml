<UserControl x:Class="MultiFuelMaster.UI.PostControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="260">

    <UserControl.Resources>
        <SolidColorBrush x:Key="BgPrimary"     Color="#0A0E1A"/>
        <SolidColorBrush x:Key="BgPanel"       Color="#111827"/>
        <SolidColorBrush x:Key="BgCard"        Color="#1A2235"/>
        <SolidColorBrush x:Key="Green"         Color="#00E676"/>
        <SolidColorBrush x:Key="Amber"         Color="#FFC107"/>
        <SolidColorBrush x:Key="Red"           Color="#FF5252"/>
        <SolidColorBrush x:Key="Blue"          Color="#42A5F5"/>
        <SolidColorBrush x:Key="TextPrimary"   Color="#E8EAF6"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#90A4AE"/>
        <SolidColorBrush x:Key="TextDim"       Color="#546E7A"/>
        <SolidColorBrush x:Key="Border"        Color="#263045"/>
    </UserControl.Resources>

    <!-- Основная карточка поста -->
    <Border x:Name="CardBorder" Background="{StaticResource BgPanel}"
            CornerRadius="10" Margin="4"
            BorderThickness="1" BorderBrush="{StaticResource Border}">
        <Grid>
            <!-- Цветная полоска слева (акцент поста) -->
            <Border x:Name="AccentStripe" Width="4" HorizontalAlignment="Left"
                    CornerRadius="10,0,0,10" Background="{StaticResource Green}"/>

            <StackPanel Margin="14,10,10,10">

                <!-- ═══ СТРОКА 1: Заголовок + Статус + Настройки ═══ -->
                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Номер поста (бейдж) -->
                    <Border Grid.Column="0" x:Name="PostBadge" Width="26" Height="26"
                            CornerRadius="6" Margin="0,0,8,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#00E676" Offset="0"/>
                                <GradientStop Color="#42A5F5" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock x:Name="PostNumberText" Text="1"
                                   FontSize="13" FontWeight="ExtraBold"
                                   Foreground="#0A0E1A"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontFamily="Consolas"/>
                    </Border>

                    <!-- Название + бейдж ДЕМО -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="PostTitleText" Text="Пост 1"
                                   FontSize="13" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <Border x:Name="DemoBadge" CornerRadius="4" Padding="4,1"
                                Background="#3D2A00" Margin="6,0,0,0"
                                Visibility="Collapsed">
                            <TextBlock Text="ДЕМО 10л" FontSize="8" FontWeight="Bold"
                                       Foreground="#FFC107"/>
                        </Border>
                    </StackPanel>

                    <!-- Статус (компактный) -->
                    <Border x:Name="StatusBorder" Grid.Column="2"
                            CornerRadius="10" Padding="6,2" Margin="0,0,4,0"
                            Background="#3A1A1A" BorderBrush="#5A2D2D" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="StatusDot" Width="5" Height="5"
                                     Fill="{StaticResource Red}" Margin="0,0,4,0"
                                     VerticalAlignment="Center"/>
                            <TextBlock x:Name="StatusText" Text="Нет связи"
                                       FontSize="9" FontWeight="Bold"
                                       Foreground="{StaticResource Red}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Кнопка настроек -->
                    <Button x:Name="BtnSettings" Grid.Column="3" Content="⚙"
                            Click="BtnSettings_Click"
                            Width="24" Height="24"
                            Background="Transparent" Foreground="{StaticResource TextSecondary}"
                            FontSize="13" BorderThickness="0" Cursor="Hand"
                            ToolTip="Настройки поста"/>
                </Grid>

                <!-- ═══ СТРОКА 2: COM + Подключение ═══ -->
                <Grid Margin="0,0,0,8" Height="26">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="COM:" FontSize="10"
                               Foreground="{StaticResource TextDim}"
                               VerticalAlignment="Center" Margin="0,0,4,0"/>

                    <Border Grid.Column="1" Background="{StaticResource BgCard}"
                            BorderBrush="{StaticResource Border}" BorderThickness="1"
                            CornerRadius="4" Padding="5,2" Margin="0,0,6,0"
                            VerticalAlignment="Center">
                        <TextBlock x:Name="ComPortInput" Text="COM3"
                                   FontSize="11" FontFamily="Consolas"
                                   Foreground="{StaticResource TextPrimary}"/>
                    </Border>

                    <Button x:Name="BtnConnect" Grid.Column="2" Content="Подключить"
                            Click="BtnConnect_Click" Height="24" Padding="8,0"
                            FontSize="10" FontWeight="Bold" Cursor="Hand"
                            Background="#1A3D2B" Foreground="{StaticResource Green}"
                            BorderThickness="0"/>
                </Grid>

                <!-- ═══ СТРОКА 3: Главный дисплей (литры | стоимость) ═══ -->
                <Border Background="{StaticResource BgCard}"
                        CornerRadius="8" Padding="10,8" Margin="0,0,0,6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Литры -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="ЛИТРОВ" FontSize="8" FontWeight="Bold"
                                       Foreground="{StaticResource TextDim}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="LitersDisplay" Text="0.00"
                                       FontSize="22" FontWeight="Bold"
                                       Foreground="{StaticResource Green}"
                                       HorizontalAlignment="Center" FontFamily="Consolas"/>
                        </StackPanel>

                        <!-- Разделитель -->
                        <Rectangle Grid.Column="1" Width="1" Height="36"
                                   Fill="{StaticResource Border}" Margin="6,0"/>

                        <!-- Стоимость -->
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="К ОПЛАТЕ" FontSize="8" FontWeight="Bold"
                                       Foreground="{StaticResource TextDim}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="CostDisplay" Text="0"
                                       FontSize="22" FontWeight="Bold"
                                       Foreground="{StaticResource Amber}"
                                       HorizontalAlignment="Center" FontFamily="Consolas"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- ═══ СТРОКА 4: Информация (топливо · цена · TOT) — одна строка ═══ -->
                <Border Background="{StaticResource BgCard}"
                        CornerRadius="6" Padding="8,4" Margin="0,0,0,6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="ТОПЛИВО" FontSize="7" Foreground="{StaticResource TextDim}"
                                       HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock x:Name="FuelTypeDisplay" Text="АИ-95"
                                       FontSize="11" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"
                                       HorizontalAlignment="Center" FontFamily="Consolas"/>
                        </StackPanel>

                        <Rectangle Grid.Column="1" Width="1" Fill="{StaticResource Border}" Margin="4,2"/>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="ЦЕНА/Л" FontSize="7" Foreground="{StaticResource TextDim}"
                                       HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock x:Name="PriceDisplay" Text="2233"
                                       FontSize="11" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"
                                       HorizontalAlignment="Center" FontFamily="Consolas"/>
                        </StackPanel>

                        <Rectangle Grid.Column="3" Width="1" Fill="{StaticResource Border}" Margin="4,2"/>

                        <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                            <TextBlock Text="TOT" FontSize="7" Foreground="{StaticResource TextDim}"
                                       HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock x:Name="TotDisplay" Text="—"
                                       FontSize="11" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"
                                       HorizontalAlignment="Center" FontFamily="Consolas"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- ═══ СТРОКА 5: Пресеты (литры | сумма) ═══ -->
                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="6"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="ЛИТРЫ" FontSize="7" FontWeight="Bold"
                                   Foreground="{StaticResource TextDim}" Margin="0,0,0,2"/>
                        <TextBox Grid.Row="1" x:Name="PresetLitersInput"
                                 Background="{StaticResource BgCard}"
                                 Foreground="{StaticResource TextPrimary}"
                                 BorderBrush="{StaticResource Border}" BorderThickness="1"
                                 FontSize="12" FontWeight="Bold" FontFamily="Consolas"
                                 Padding="5,3" CaretBrush="#E8EAF6"
                                 PreviewTextInput="NumericInput_PreviewTextInput"
                                 TextChanged="PresetLiters_TextChanged"/>
                    </Grid>

                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="СУММА" FontSize="7" FontWeight="Bold"
                                   Foreground="{StaticResource TextDim}" Margin="0,0,0,2"/>
                        <TextBox Grid.Row="1" x:Name="PresetCostInput"
                                 Background="{StaticResource BgCard}"
                                 Foreground="{StaticResource TextPrimary}"
                                 BorderBrush="{StaticResource Border}" BorderThickness="1"
                                 FontSize="12" FontWeight="Bold" FontFamily="Consolas"
                                 Padding="5,3" CaretBrush="#E8EAF6"
                                 PreviewTextInput="NumericInput_PreviewTextInput"
                                 TextChanged="PresetCost_TextChanged"/>
                    </Grid>
                </Grid>

                <!-- ═══ СТРОКА 6: Кнопки СТАРТ / СТОП (компактные) ═══ -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="4"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="BtnStart" Grid.Column="0" Height="34"
                            Click="BtnStart_Click" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="btnBg" CornerRadius="6"
                                        Background="#1A3D2B" BorderBrush="#2D6B45"
                                        BorderThickness="1.5">
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="&#9654;" FontSize="10"
                                                   Foreground="#00E676" Margin="0,0,4,0"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="СТАРТ" FontSize="10" FontWeight="ExtraBold"
                                                   Foreground="#00E676" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="btnBg" Property="Background" Value="#2A5D3B"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="btnBg" Property="Opacity" Value="0.3"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="BtnStop" Grid.Column="2" Height="34"
                            Click="BtnStop_Click" IsEnabled="False" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="btnBg" CornerRadius="6"
                                        Background="#3D1A1A" BorderBrush="#6B2D2D"
                                        BorderThickness="1.5">
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="&#9632;" FontSize="10"
                                                   Foreground="#FF5252" Margin="0,0,4,0"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="СТОП" FontSize="10" FontWeight="ExtraBold"
                                                   Foreground="#FF5252" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="btnBg" Property="Background" Value="#5D2A2A"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="btnBg" Property="Opacity" Value="0.3"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

            </StackPanel>
        </Grid>
    </Border>
</UserControl>
