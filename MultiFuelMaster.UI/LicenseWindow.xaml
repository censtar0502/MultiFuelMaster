<Window x:Class="MultiFuelMaster.UI.LicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лицензия MultiFuelMaster"
        Height="500" Width="460"
        WindowStartupLocation="CenterOwner"
        Background="#0A0E1A"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Window.Resources>
        <SolidColorBrush x:Key="BgPanelBrush"      Color="#111827"/>
        <SolidColorBrush x:Key="BgCardBrush"        Color="#1A2235"/>
        <SolidColorBrush x:Key="TextPrimaryBrush"   Color="#E8EAF6"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#90A4AE"/>
        <SolidColorBrush x:Key="TextDimBrush"       Color="#546E7A"/>
        <SolidColorBrush x:Key="BorderBrush"        Color="#263045"/>
        <SolidColorBrush x:Key="GreenBrush"         Color="#00E676"/>
        <SolidColorBrush x:Key="RedBrush"           Color="#FF5252"/>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Статус -->
        <Border Grid.Row="0"
                Background="{StaticResource BgPanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" CornerRadius="12"
                Padding="20" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock x:Name="StatusText" Text="Пробный период"
                           FontSize="16" FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="DaysText" Text=""
                           FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,6,0,0"/>
                <TextBlock x:Name="SlotsText" Text=""
                           FontSize="12" Foreground="{StaticResource GreenBrush}"
                           HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- HWID -->
        <Border Grid.Row="1"
                Background="{StaticResource BgPanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" CornerRadius="12"
                Padding="16" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="HARDWARE ID" FontSize="11" FontWeight="Bold"
                           Foreground="{StaticResource TextDimBrush}" Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border Background="{StaticResource BgCardBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1" CornerRadius="6" Padding="8">
                        <TextBlock x:Name="HwidText" Text=""
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   FontSize="10" FontFamily="Consolas"
                                   TextWrapping="Wrap"/>
                    </Border>
                    <Button x:Name="CopyHwidButton" Grid.Column="1" Content="Копировать"
                            Click="CopyHwidButton_Click"
                            Background="#1A3D2B" Foreground="{StaticResource GreenBrush}"
                            FontSize="11" FontWeight="Bold"
                            Padding="10,6" Margin="8,0,0,0" HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Поле ввода ключа -->
        <Border Grid.Row="2"
                Background="{StaticResource BgPanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" CornerRadius="12"
                Padding="16" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="ЛИЦЕНЗИОННЫЙ КЛЮЧ" FontSize="11" FontWeight="Bold"
                           Foreground="{StaticResource TextDimBrush}" Margin="0,0,0,8"/>
                <TextBox x:Name="LicenseKeyTextBox"
                         Background="{StaticResource BgCardBrush}"
                         Foreground="{StaticResource TextPrimaryBrush}"
                         BorderBrush="{StaticResource BorderBrush}"
                         CaretBrush="{StaticResource TextPrimaryBrush}"
                         FontFamily="Consolas" FontSize="15"
                         Padding="10,8" MaxLength="29"
                         CharacterCasing="Upper"/>
            </StackPanel>
        </Border>

        <!-- Подсказка -->
        <TextBlock Grid.Row="3"
                   Text="Формат: XXXXX-XXXXX-XXXXX-XXXXX-XXXXX"
                   FontSize="10" Foreground="{StaticResource TextDimBrush}"
                   HorizontalAlignment="Center" Margin="0,0,0,12"/>

        <!-- Растягивающийся пустой элемент -->
        <Border Grid.Row="4"/>

        <!-- Кнопки -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="ЗАКРЫТЬ" Click="ExitButton_Click"
                    Background="#3D1A1A" Foreground="{StaticResource RedBrush}"
                    FontWeight="Bold" FontSize="13" Padding="0,14" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="ActivateButton" Grid.Column="2"
                    Content="АКТИВИРОВАТЬ" Click="ActivateButton_Click"
                    Background="#1A3D2B" Foreground="{StaticResource GreenBrush}"
                    FontWeight="Bold" FontSize="13" Padding="20,14" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>
